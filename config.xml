<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
		id          = "TwojaFormarma"
        version     = "1.0.0" >

    <name>TwojaForma</name>
    <description>My first mobile to control your body</description>
    <author href="mateuszdziedzina.com" email="mateusz.dziedzina1@gmail.com">
		Mateusz Dziedzina
	</author>
	 <author href="marcin.feliks.com" email="marcin.feliks91@gmail.com">
		Marcin Feliks
	</author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
    </platform>
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-device" spec="~1.1.4"/> 
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />

    <plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>
    <plugin name="cordova-plugin-camera" spec="~2.4.1" />
    <plugin name="cordova.plugins.diagnostic" source="npm" />

    <splash src="img/splash.png"/>
    <icon src="img/icon.png"/>
</widget>